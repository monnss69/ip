<?xml version="1.0" encoding="UTF-8"?>

<!-- AI-created code: Modern chat-like GUI layout -->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="700.0" prefWidth="450.0"
            styleClass="root"
            stylesheets="@../styles/chat.css"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mon.MainWindow">
    <children>
        <!-- AI-created code: Professional header with app branding -->
        <VBox styleClass="chat-header" prefWidth="450.0" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <children>
                <Label text="Mon Assistant" styleClass="header-title" />
                <Label text="Your personal task manager" styleClass="header-subtitle" />
            </children>
        </VBox>
        
        <!-- AI-created code: Scrollable chat area with modern styling -->
        <ScrollPane fx:id="scrollPane"
                    styleClass="chat-scroll-pane"
                    hbarPolicy="NEVER"
                    vbarPolicy="AS_NEEDED"
                    fitToWidth="true"
                    AnchorPane.topAnchor="70.0"
                    AnchorPane.bottomAnchor="80.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0">
            <content>
                <VBox fx:id="dialogContainer"
                      styleClass="chat-container"
                      spacing="4.0"
                      prefWidth="430.0">
                    <padding>
                        <Insets top="10.0" bottom="10.0" left="10.0" right="10.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
        
        <!-- AI-created code: Modern input area with styled text field and button -->
        <HBox styleClass="input-container"
              spacing="12.0"
              alignment="CENTER"
              AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0">
            <children>
                <TextField fx:id="userInput"
                           styleClass="user-input"
                           promptText="Type your message here..."
                           onAction="#handleUserInput"
                           HBox.hgrow="ALWAYS" />
                <Button fx:id="sendButton"
                        styleClass="send-button"
                        text="Send"
                        onAction="#handleUserInput"
                        minWidth="70.0" />
            </children>
        </HBox>
    </children>
</AnchorPane>

